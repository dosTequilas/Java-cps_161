package classPractice;

import java.util.Scanner;

public class TempConverter {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		double celsius1;
		double fahrenheit1;
		double celsius2;
		double fahrenheit2;
	
		
		System.out.println("Please enter a temperature in celsius: ");
		celsius1 = scan.nextDouble();
		fahrenheit1 = celsius1 * 9 / 5 + 32;
		System.out.println("celsius " + celsius1 + " is " + fahrenheit1 + " in fahrenheit");
		
		System.out.println("Please enter a temperature in fahrenheit: ");
		fahrenheit2 = scan.nextDouble();
		celsius2 = ( fahrenheit2 - 32 ) * 5 / 9;
		System.out.println("Fahrenheit " + fahrenheit2 + " is " + celsius2 + " in celsius");

		scan.close();
	}

}
