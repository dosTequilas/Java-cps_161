		// ==, >, <, <=, >=, !=
		System.out.println(3 == 4);
		System.out.println(3 >= 3);
		System.out.println(3 != 4);
		int myScore = 100;
		int yourScore = 200;
		if (myScore > yourScore) {
			System.out.println("I won.");
		}else {
			System.out.println("You won.");
		}
		
		int hoursWorked = 30;
		if (hoursWorked > 40) {
			System.out.println("You get an overtime pay.");
		}
	}

